                    <StackPanel Orientation="Horizontal" Margin="0,0,346,0">
                        <Label Content="sfsfefewfef" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" FontFamily="Ubuntu" FontSize="16" VerticalContentAlignment="Center"></Label>
