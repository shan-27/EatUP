                    </StackPanel>

                </Grid>


            </Border>
        </Grid>
        <Grid Margin="0,425,0.4,0.4" Background="#FFC3C3C3">
            <Label Content="Total : Rs " HorizontalAlignment="Left" VerticalAlignment="Top" Height="36" Width="113" Margin="499,22,0,0" FontFamily="Ubuntu " FontWeight="Bold" FontSize="24"/>
            <TextBlock x:Name="totaltext" HorizontalAlignment="Left" Height="28" Margin="612,27,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138" FontFamily="Ubuntu" FontSize="24" FontWeight="Bold" TextAlignment="Center"/>

        </Grid>
    </Grid>
</UserControl>
